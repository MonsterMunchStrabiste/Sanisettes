<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alexandre.myslidingtabs.activities.FullDescription"
    tools:showIn="@layout/activity_full_description">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ligne d'accès : "
        android:id="@+id/line_label"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pas d'information"
        android:id="@+id/line"
        android:textColor="#000000"
        android:layout_alignBaseline="@id/line_label"
        android:layout_toRightOf="@id/line_label"
        android:gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En service : "
        android:id="@+id/working_label"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@id/line_label"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pas d'information"
        android:layout_alignBaseline="@id/working_label"
        android:id="@+id/working"
        android:textColor="#000000"
        android:layout_toRightOf="@id/working_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarif : "
        android:id="@+id/price_label"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@id/working_label"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pas d'information"
        android:layout_alignBaseline="@id/price_label"
        android:id="@+id/price"
        android:textColor="#000000"
        android:layout_toRightOf="@id/price_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accès sans navigo : "
        android:id="@+id/access_label"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@id/price_label"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pas d'information"
        android:layout_alignBaseline="@id/access_label"
        android:id="@+id/access"
        android:textColor="#000000"
        android:layout_toRightOf="@id/access_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accès PMR : "
        android:id="@+id/pmr_label"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@id/access_label"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pas d'information"
        android:id="@+id/pmr"
        android:textColor="#000000"
        android:layout_toRightOf="@id/pmr_label"
        android:layout_alignBaseline="@id/pmr_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localisation précise : "
        android:id="@+id/description_label"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@id/pmr_label"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pas d'information"
        android:layout_marginTop="10dp"
        android:id="@+id/description"
        android:textColor="#000000"
        android:layout_below="@id/description_label" />

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/description_label"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
